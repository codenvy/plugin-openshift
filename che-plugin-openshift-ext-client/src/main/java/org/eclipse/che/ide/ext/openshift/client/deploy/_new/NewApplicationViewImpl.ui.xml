<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='resources' type='org.eclipse.che.ide.ext.openshift.client.OpenshiftResources'/>
    <ui:with field='locale' type='org.eclipse.che.ide.ext.openshift.client.OpenshiftLocalizationConstant'/>
    <ui:style>
        .spacing {
            margin-top: 20px;
        }
    </ui:style>
    <g:DockLayoutPanel width="600px" height="450px">
        <g:center>
            <g:FlowPanel>
                <g:Label text="Application"/>
                <g:Label text="Name"/>
                <g:TextBox ui:field="applicationName" addStyleNames="{resources.css.textInput}"/>
                <g:RadioButton name="createMode" text="Create New OpenShift Project" ui:field="createNewProject"/>
                <g:Label text="Project Name"/>
                <g:TextBox ui:field="projectName" addStyleNames="{resources.css.textInput}"/>
                <g:Label text="Display Name"/>
                <g:TextBox ui:field="displayName" addStyleNames="{resources.css.textInput}"/>
                <g:Label text="Description"/>
                <g:TextArea ui:field="description"/>
                <g:RadioButton name="createMode" text="Choose Existing OpenShift Project" ui:field="choseExistProject"/>
                <g:ListBox ui:field="projectsList" addStyleNames="{resources.css.textInput}"/>
            </g:FlowPanel>
        </g:center>
        <g:east size="300">
            <g:FlowPanel>
                <g:Label text="Deploy Information"/>
                <g:Label text="Build image"/>
                <g:ListBox ui:field="buildImages" addStyleNames="{resources.css.textInput}"/>
                <g:Label text="Labels"/>
            </g:FlowPanel>
        </g:east>
        <g:east size="18">
            <g:FlowPanel addStyleNames="{resources.css.sectionSeparator}"></g:FlowPanel>
        </g:east>
    </g:DockLayoutPanel>
</ui:UiBinder>