<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='resources' type='org.eclipse.che.ide.ext.openshift.client.OpenshiftResources'/>

    <ui:style>
        .emptyBorder {
            margin: 6px;
            width: 450px;
        }

        .emptyBorder div input {
            cursor: pointer;
            min-height: 20px;
        }

        .emptyBorder div input + div {
            height: 22px;
        }

        .linkInput div {
            margin-bottom: 1px;
        }

        .linkInput input {
            width: 415px;
            margin-top: 1px;
            margin-bottom: 9px;
            display: inline;
            float: left;
        }
    </ui:style>
    <g:FlowPanel styleName="{style.emptyBorder}">
        <g:FlowPanel ui:field="urlsPanel" styleName="{style.linkInput}"/>
    </g:FlowPanel>

</ui:UiBinder>
