<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style type='org.eclipse.che.ide.ext.openshift.client.build.BuildsViewImpl.BuildsStyles'>

        .verticalScroll {
            -webkit-user-select: text;
            user-select: text;

            overflow: initial;
            overflow-x: hidden;
            overflow-y: scroll;
        }

        /*******************************************************************************************************
         *  Project item
         *******************************************************************************************************/

        .project {
        }

        .projectTitle {
            height: 20px;
            width: 100%;
            position: relative;
        }

        .projectTitle[connected]:HOVER {
            background-color: rgba(85, 85, 85, 0.3);
        }

        .projectButton {
            position: absolute;
            left: 0px;
            top: 0px;
            width: 18px;
            height: 20px;
            line-height: 18px;
            font-size: 11px;
            text-align: center;
            cursor: default;
        }

        .projectIcon {
            position: absolute;
            left: 18px;
            top: 0px;
            width: 18px;
            height: 20px;
            overflow: hidden;
        }

        .projectIcon svg {
            width: 14px;
            height: 14px;
            margin-left: 1px;
            margin-top: 3px;
        }

        .projectLabel {
            position: absolute;
            left: 37px;
            top: 0px;
            height: 20px;
            line-height: 20px;
            font-size: 11px;
            cursor: default;
        }

        .projectBuilds {
        }

        /*******************************************************************************************************
         *  Build item
         *******************************************************************************************************/

        .build {
            height: 20px;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .build:HOVER {
            background-color: #555;
        }

        .build[selected],
        .build[selected]:HOVER {
            background-color: #256c9f;
        }

        .buildIcon {
            width: 20px;
            height: 20px;
            position: absolute;
            left: 32px;
            top: 0px;
            overflow: hidden;
        }

        .buildIcon svg {
            width: 15px;
            height: 15px;
            position: absolute;
            left: 2px;
            top: 3px;
        }

        .buildLabel {
            font-size: 11px;
            line-height: 20px;
            position: absolute;
            left: 52px;
            top: 0px;
            cursor: default;
        }

        /*******************************************************************************************************
         *  Build Logger
         *******************************************************************************************************/

        .logger {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .loggerHeader {
            position: absolute;
            left: 5px;
            right: 0px;
            top: 0px;
            height: 19px;

            font-size: 11px;
            line-height: 18px;

            border-bottom: 1px solid #555;
        }

        .loggerBody {
            position: absolute;
            left: 0px;
            right: 0px;
            top: 25px;
            bottom: 0px;
            overflow: hidden;
        }

        .loggerBody > div {
            width: 100%;
            height: 100%;
        }

        .loggerLines {
            width: 100%;
            -webkit-user-select: text;
            user-select: text;

            border-left-style: solid;
            border-left-width: 5px;
            border-left-color: transparent;

            box-sizing: border-box;
        }

        .loggerLines > pre {
            font-size: 11px;
            width: 100%;
            word-wrap: break-word;
            padding: 0;
            margin: 0;
        }

    </ui:style>

    <g:SplitLayoutPanel ui:field="mainPanel" width="100%" height="100%">
        <g:west size="250">
            <g:ScrollPanel styleName="{style.verticalScroll}">
                <g:FlowPanel ui:field="projectsPanel"></g:FlowPanel>
            </g:ScrollPanel>
        </g:west>
        <g:center>
            <g:FlowPanel ui:field="logsPanel"></g:FlowPanel>
        </g:center>
    </g:SplitLayoutPanel>

</ui:UiBinder>
